<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDialogFragment">

    <TextView
        android:id="@+id/text_input_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        android:text="INPUT DATA"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tambah_input_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_input_data"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edit_text"
        android:hint="Masukkan judul"
        android:padding="3dp"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="15dp" />

    <EditText
        android:id="@+id/tambah_input_catatan"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tambah_input_judul"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edit_text"
        android:hint="Masukkan catatan"
        android:padding="3dp"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/tambah_button_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tambah_input_catatan"
        android:layout_centerHorizontal="true"
        android:text="INPUT"
        android:layout_marginTop="20dp"/>

</RelativeLayout>